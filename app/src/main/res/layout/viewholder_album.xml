<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="56dp">

	<dev.hellpie.apps.music09.concept.ui.views.SquareView
			android:id="@+id/album_icon"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_centerVertical="true"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:elevation="1dp"
			android:padding="4dp"
			android:background="@android:color/white"/>

	<TextView
			android:id="@+id/album_items"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingEnd="8dp"
			android:paddingStart="8dp"
			android:layout_centerVertical="true"
			android:layout_alignParentEnd="true" />


	<LinearLayout
			android:id="@+id/_album_info_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toEndOf="@id/album_icon"
			android:layout_toStartOf="@id/album_items"
			android:orientation="vertical">

		<TextView
				android:id="@+id/album_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="@style/TextAppearance.AppCompat.Notification.Title"/>

		<TextView
				android:id="@+id/album_artist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
	</LinearLayout>
</RelativeLayout>
