<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/activity_songs"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="dev.hellpie.apps.music09.concept.MainActivity">

	<android.support.design.widget.AppBarLayout
			android:id="@+id/appbarlayout"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			app:elevation="0dp">

		<android.support.v7.widget.Toolbar
				android:layout_height="?attr/actionBarSize"
				app:titleTextColor="@android:color/white"
				app:navigationIcon="@drawable/ic_arrow_back"
				android:layout_width="match_parent">

			<TextView
					android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
					android:textColor="@color/colorAccent"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Music list"
					android:layout_gravity="center"
					android:id="@+id/toolbar_title" />
		</android.support.v7.widget.Toolbar>

	</android.support.design.widget.AppBarLayout>

	<View
			android:id="@+id/_appbar_bottom_border"
			android:layout_width="match_parent"
			android:layout_height="0.1dp"
			android:layout_below="@id/appbarlayout"
			android:background="@color/colorAccent" />

	<View
			android:id="@+id/_appbar_bottom_shadow"
			android:layout_width="match_parent"
			android:layout_height="4dp"
			android:layout_alignBottom="@id/_appbar_bottom_border"
			android:layout_marginBottom="-4dp"
			android:background="@drawable/elevation_shadow"/>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/appbarlayout"
			android:orientation="vertical">

		<include layout="@layout/tmp_songs_listview" />
	</LinearLayout>
</RelativeLayout>
